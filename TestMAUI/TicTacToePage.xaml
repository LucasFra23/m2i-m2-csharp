<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestMAUI.TicTacToePage"
             Title="TicTacToe">
    <StackLayout>
        <Grid HeightRequest="500" WidthRequest="500" HorizontalOptions="Center" VerticalOptions="Center" x:Name="grid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Text="" Clicked="Button_Clicked" CornerRadius="0"/>
            <Button Grid.Row="0" Grid.Column="1" Text="" Clicked="Button_Clicked" CornerRadius="0"/>
            <Button Grid.Row="0" Grid.Column="2" Text="" Clicked="Button_Clicked" CornerRadius="0"/>
            <Button Grid.Row="1" Grid.Column="0" Text="" Clicked="Button_Clicked" CornerRadius="0"/>
            <Button Grid.Row="1" Grid.Column="1" Text="" Clicked="Button_Clicked" CornerRadius="0"/>
            <Button Grid.Row="1" Grid.Column="2" Text="" Clicked="Button_Clicked" CornerRadius="0"/>
            <Button Grid.Row="2" Grid.Column="0" Text="" Clicked="Button_Clicked" CornerRadius="0"/>
            <Button Grid.Row="2" Grid.Column="1" Text="" Clicked="Button_Clicked" CornerRadius="0"/>
            <Button Grid.Row="2" Grid.Column="2" Text="" Clicked="Button_Clicked" CornerRadius="0"/>
        </Grid>

        <Button Text="Reset" Clicked="Reset_Clicked" HorizontalOptions="Center" VerticalOptions="End" Margin="20"/>
    </StackLayout>
</ContentPage>